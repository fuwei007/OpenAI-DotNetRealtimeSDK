<UserControl x:Class="Realtime.API.Dotnet.SDK.WPF.RealtimeApiWpfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Realtime.API.Dotnet.SDK.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="ChatListBox" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Mode=OneWay}" TextWrapping="Wrap" Margin="5" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="Black"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1" Grid.Column="0" Margin="10" Width="150" Height="40" VerticalAlignment="Center" Name="StartSpeechRecognition"  Content="Start Speech Recognition"> </Button>

        <Ellipse x:Name="RippleEffect" Grid.Row="1" Grid.Column="1" Width="100" Height="100" Fill="LightBlue" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="RippleScale" ScaleX="1" ScaleY="1" CenterX="50" CenterY="50"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <Button Content="Stop Speech Recognition" Grid.Row="1" Grid.Column="2" Margin="10" Width="200" Height="40" VerticalAlignment="Center" Name="StopSpeechRecognition" />

    </Grid>
</UserControl>
