<UserControl x:Class="Navbot.RealtimeApi.Dotnet.SDK.WPF.ConversationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              xmlns:local="clr-namespace:Navbot.RealtimeApi.Dotnet.SDK.WPF"             xmlns:entity="clr-namespace:Navbot.RealtimeApi.Dotnet.SDK.Core.Model.Entity;assembly=Navbot.RealtimeApi.Dotnet.SDK.Core"             xmlns:sys="clr-namespace:System;assembly=mscorlib"             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600">
    
    <UserControl.Resources>
        <local:SourceAlignmentConverter x:Key="SourceAlignmentConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Design-Time Data -->
        <x:Array x:Key="DesignTimeConversationEntries" Type="{x:Type entity:ConversationEntry}">
            <entity:ConversationEntry Source="User" Content="Hello, AI!" UTCTimestamp="{x:Static sys:DateTime.Now}" />
            <entity:ConversationEntry Source="AI" Content="Hello, User!" UTCTimestamp="{x:Static sys:DateTime.Now}" />
            <entity:ConversationEntry Source="User" Content="How are you today?" UTCTimestamp="{x:Static sys:DateTime.Now}" />
        </x:Array>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl 
            Name="ConversationContainer"
            ItemsSource="{Binding ConversationEntries, FallbackValue={StaticResource DesignTimeConversationEntries}}"
            >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:ChatMessageListItemControl />
                </DataTemplate>
                
                <!--<DataTemplate DataType="{x:Type local:MessageControl}">
                    <local:MessageControl SourceImage="{Binding SourceImage}"
                                          ContentText="{Binding Content}"
                                          IsLeftAligned="{Binding Source, Converter={StaticResource SourceAlignmentConverter}, ConverterParameter=Left}"
                                          IsRightAligned="{Binding Source, Converter={StaticResource SourceAlignmentConverter}, ConverterParameter=Right}" />
                </DataTemplate>-->
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>


